---
eleventyComputed:
    title: "{{ firstName }} {{ lastName }}"
layout: base.liquid
---

{% assign previousArtist = collections.artists | sort: 'data.order' | getPreviousCollectionItem: page %}
{% assign nextArtist = collections.artists | sort: 'data.order' | getNextCollectionItem: page %}

{% comment %}
  {% if previousArtist %}
  Previous:
  <a href="{{ previousArtist.url | url }}">{{ previousArtist.data.title }}</a>
  {% endif %}
  {% if nextArtist %}
  Next:
  <a href="{{ nextArtist.url | url }}">{{ nextArtist.data.title }}</a>
  {% endif %}
{% endcomment %}

<nav class="row" aria-label="Artist list">
  <div class="col-auto">
    {% if previousArtist %}
      <a href="{{ previousArtist.url | url }}" class="button">Previous</a>
    {% endif %}
  </div>
  <div class="col-end">
    {% if nextArtist %}
      <a href="{{ nextArtist.url | url }}" class="button">Next</a>
    {% endif %}
  </div>
</nav>

<div class="artist block">
  <div class="row">
    <div class="col-auto">
      <span class="square">{{ order }}</span>
    </div>
    <div class="col-end">
      <a href="#" class="button small">Floorplan</a>
    </div>
  </div>
  <h2>{{ workTitle }}</h2>
  <div class="row-full">
    <div class="col-start">
      <p>{{ year }}</p>
      <p>{{ workType }}</p>
      <p>({{ workSize }})</p>
    </div>
    <div class="col-auto">
      {{ workDescription }}
    </div>
  </div>

  <!-- Audio block -->
  <figure>
    <audio controls src="{{ audioLink | url }}">
      <a href="{{ audioLink | url }}">Download audio</a>
    </audio>
    <figcaption>Listen to lorem ipsum dolor</figcaption>
  </figure>

  <div>
    <a href="{{ transcriptLink | url }}" class="button small">Download transcript</a>
  </div>

  <div>
    <img src="{{ workImage | url }}" alt="{{ workTitle }}">
  </div>

  <h2>Artist Bio</h2>
  <div class="row-full">
    <div class="col-start">
      <p>
        <a href="//{{ artistWeb }}">{{ artistWeb }}</a>
      </p>
      <p>
        <a href="//instagram.com/{{ artistInsta }}">@{{ artistInsta }}</a>
      </p>
    </div>
    <div class="col-auto">
      {{ content }}
    </div>
  </div>
</div>